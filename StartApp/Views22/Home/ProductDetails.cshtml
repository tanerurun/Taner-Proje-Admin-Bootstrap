@using StartApp.Business
@model StartApp.Models.HomeView
@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    HttpCookie cookie = HttpContext.Current.Request.Cookies["Language"];
    string LangCode = cookie.Value.ToString();
}
<div class="container main-container headerOffset">
    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a href="~/">@StartApp.Language.Text.Home</a></li>
                <li class="active"> @if (LangCode == "en") {  @Model.ProductDetails.TitleEng } else { @Model.ProductDetails.Title }  </li>
            </ul>
        </div>
    </div>
    <div class="row transitionfx">

        <!-- left column -->
        <div class="col-lg-6 col-md-6 col-sm-6">
            <!-- product Image and Zoom -->

            <div class="main-image sp-wrap col-lg-12 no-padding style3">

                <a href="~/Assets/products/@Model.ProductDetails.MainImage">
                    <img src="~/Assets/products/@Model.ProductDetails.MainImage" class="img-responsive" alt="img">
                </a>
            </div>
        </div>
        <!--/ left column end -->
        <!-- right column -->
        <div class="col-lg-6 col-md-6 col-sm-5">
            <h2 class="product-title">
             @if (LangCode == "en"){  @Model.ProductDetails.TitleEng } else { @Model.ProductDetails.Title }
             </h2>
                <h3 class="product-code">@StartApp.Language.Text.ProductCode: @Model.ProductDetails.StockCode</h3>

                <div class="rating">
                    <p>
                        <span><i class="fa fa-star"></i></span> <span><i class="fa fa-star"></i></span> <span>
                            <i class="fa fa-star"></i>
                        </span> <span><i class="fa fa-star"></i></span> 
                            <i class="fa fa-star-o "></i>
                    </p>
                </div>
                <!--/.color-details-->
                <p> @if (LangCode == "en") {  @Model.ProductDetails.DescriptionEng } else  { @Model.ProductDetails.Description } </p>
                <div class="productThumb"></div>
                <!--/.productThumb-->
                <!-- productFilter -->

                <div class="clear"></div>
                <div class="product-tab w100 clearfix">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#details" style="background-color:#333" data-toggle="tab">@StartApp.Language.Text.ProductFeatures</a></li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane active" id="details">
                            <p> @if (LangCode == "en") {  @Html.Raw(Model.ProductDetails.DetailsEng)  } else { @Html.Raw(Model.ProductDetails.Details) } </p>
                        </div>
                    </div>
                    <!-- /.tab content -->

                </div>
                <!--/.product-tab-->


        </div>
        <!--/ right column end -->

    </div>
    <!--/.row-->

    @Html.Partial("~/Views/Shared/_PartialRelatedProducts.cshtml")
    <!--/.recommended-->

    <div style="clear:both"></div>
</div>





