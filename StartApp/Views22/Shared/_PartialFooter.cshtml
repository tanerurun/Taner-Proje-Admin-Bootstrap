@using StartApp.Business
@model StartApp.Models.HomeView
    @{ 
        cCompany Company = new cCompany();
        cCategories Category = new cCategories();
        Model.CompanyDetails = Company.Details();
        Model.Categories = Category.ListForCount(5);

        cLanguage Language = new cLanguage();
        string LangCode = Language.Details();
    }
<div class="gap"></div>
<footer>
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-3  col-md-3 col-sm-4 col-xs-6">
                    <h3> @StartApp.Language.Text.Support </h3>
                    <ul>
                        <li class="supportLi">
                            <p> @StartApp.Language.Text.ContactInformation</p>
                            <h4><a class="inline" href="callto:@Model.CompanyDetails.Phone"> <strong> <i class="fa fa-phone"> </i> @Model.CompanyDetails.Phone </strong> </a></h4>
                            <h4>
                                <a class="inline" href="mailto:@Model.CompanyDetails.Email">
                                    <i class="fa fa-envelope-o"> </i>
                                   <strong> @Model.CompanyDetails.Email </strong>
                                </a>
                            </h4>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-2  col-md-2 col-sm-4 col-xs-6">
                    <h3> @StartApp.Language.Text.Address </h3><br />
                    <p>
                        <strong>Tekneci Madeni Eşya San.Tic.LTD.ŞTİ</strong><br />
                        Cebeci Cad. No:177/A Küçükköy <br />Gaziosmanpaşa/ İSTANBUL
                    </p>
                </div>
                <div class="col-lg-2  col-md-2 col-sm-4 col-xs-6">
                    <h3> @StartApp.Language.Text.Categories </h3>
                    <ul>
                        @foreach (var item in Model.Categories)
                        {
                        <li>
                            <a href="~/Home/Categories?ID=@item.ID">
                                @if (LangCode == "en") {  @item.NameEng } else  {  @item.Name  }                                
                            </a>
                        </li>
                        }
                    </ul>
                </div>
                    <div class="col-lg-2  col-md-2 col-sm-4 col-xs-6">
                        <h3> @StartApp.Language.Text.Information </h3>
                        <ul class="list-unstyled footer-nav">
                            <li>
                                <a href="~/hakkimizda">
                                    @StartApp.Language.Text.About
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    @StartApp.Language.Text.Mission &Aacute; @StartApp.Language.Text.Vision
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    @StartApp.Language.Text.BankAccounts
                                </a>
                            </li>
                            <li><a href="#"> @StartApp.Language.Text.Documents </a></li>
