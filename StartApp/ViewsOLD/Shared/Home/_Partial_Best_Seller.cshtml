@model StartApp.Models.HomeView
@using StartApp.Business
@{
    cProducts pList = new cProducts();
    cSeo Seo = new cSeo();
    /* Dekorasyon List */
    List<StartApp.Models.Products> BestSeller = pList.List();
    BestSeller = BestSeller.Where(x => (x.ID == 4863) || (x.ID == 4827) || (x.ID == 4798) || (x.ID == 4801) || (x.ID == 4848) ||
    (x.ID == 4824) || (x.ID == 4787) || (x.ID == 4768) || (x.ID == 4755) || (x.ID == 4753)).ToList();
    /* Dekorasyon List */

}

<!--Dekorasyon List -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default block2" style="border:2px solid #f1f1f1;padding:8px;" >
            <div class="panel-heading"> 
                <a style="color:#000000; font-size:18px;"><i class="fa fa-star"></i> ÇOK SATILANLAR </a>
            </div>
            <div class="panel-wrapper p-b-10 collapse in">
                <div id="owl-best-seller" class="owl-carousel owl-theme owl-tabs">
                    @foreach (var item in BestSeller)
                    {

                    <div class="item">
                        <a href="/@Seo.CreateUrl(item.CategoryTitle)/@Seo.CreateUrl(item.Title)-@item.ID">
                            <img src="~/Assets/Products/@item.MainImage" alt="~/Details?ID=@item.Title">
                            <p style="color:#000000; min-height:60px; font-weight:500; text-align:center">@item.Title<br /><small align="center" class="text-muted db"> İzleme Kodu: @item.ID</small> </p>                                 
                        </a>
                        <div align="center">
                            <button type="button" class="btn btn-default">
                                Min Sipariş <span class="badge badge-warning">@item.MinOrder</span>
                            </button>
                        </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!--Dekorasyon List -->


