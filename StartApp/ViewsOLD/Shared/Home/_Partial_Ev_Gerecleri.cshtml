
@model StartApp.Models.HomeView
@using StartApp.Business
@{
    cProducts pList = new cProducts();
    cProducts pList2 = new cProducts();
    cSeo Seo = new cSeo();

    /* Ev Gereçleri List */
    List<StartApp.Models.Products> EvGerecleriList = pList2.ListForCategoriy(39);
    EvGerecleriList = EvGerecleriList.Where(x => x.Special == 1).Take(12).ToList();
    /*  Ev Gereçleri List */
}

<!--Dekorasyon List -->
<div class="row ">
    <div class="col-lg-12">
        <div class="panel panel-default block2" style="border:2px solid #f1f1f1;padding:8px;">
            <div class="panel-heading font-size-16">
                <a href="#" style="color:#000000; font-size:18px;"><i class="fa fa-list"></i> EV GEREÇLERİ </a>
            </div>
            <div class="panel-wrapper p-b-10 collapse in">
                <div id="owl-ev-gerecleri" class="owl-carousel owl-theme owl-tabs">
                    @foreach (var item in EvGerecleriList)
                    {

                        <div class="item">
                            <a href="/@Request.Cookies["Language"].Value.ToLower()/@Seo.CreateUrl(item.CategoryTitle)/@Seo.CreateUrl(item.Title)-@item.ID">
                                <img src="~/Assets/Products/@item.MainImage" alt="~/Details?ID=@item.Title">
                                <p style="color:#000000; min-height:60px; font-weight:500; text-align:center">@item.Title<br /><small align="center" class="text-muted db"> @item.ManufacturerName - @item.StockCode</small> </p>

                                <div align="center">
                                    <button type="button" class="btn btn-default">
                                        Min Sipariş <span class="badge badge-warning">@item.MinOrder</span>
                                    </button>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!--Dekorasyon List -->
