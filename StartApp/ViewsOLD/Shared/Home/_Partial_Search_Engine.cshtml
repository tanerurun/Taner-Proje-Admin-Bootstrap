<div class="white-box stpr-search-engine m-t-40">
    <div align="center" class="container">
        <form method="post" action="~/@Request.Cookies["Language"].Value.ToLower()/searching">
            @Html.AntiForgeryToken()
            <div class="col-md-5 offset-lg-3 stpr-p-t-50">
                <p class="stpr-search-engine-title"><strong>@StartApp.Language.Text.SearchForProducts </strong></p>
                <div class="input-group stpr-search-engine-input">
                    <input id="txtsearchengine" style="height:50px;" type="text" name="txtsearch" class="form-control" placeholder="@StartApp.Language.Text.SearchingText"> <span class="input-group-btn"><button type="submit" style="border-color:#ffc926;" class="btn waves-effect waves-light btn-warning"><i style="color:#000;" class="fa fa-search"></i></button></span>
                </div>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    $("#txtsearchengine").autocomplete({
        source: function(request,response) {  
            $.ajax({  
                url: "/Home/SearchEngine",
                type: "POST",  
                dataType: "json",  
                data: { Prefix: request.term },  
                success: function (data) {  
                    response($.map(data, function (item) {  
                        return { label: item.Text, value: item.Value };  
                    }))  
  
                }  
            })  
        },  
        messages: {  
            noResults: "Ürün Bulunamadı", results: "Ürün Bulundu!"  
        }  
    });  
</script>

