@model StartApp.Models.ResellerView
@using StartApp.Business
@{
    cProducts pList = new cProducts();
    cProducts pList2 = new cProducts();
    cSeo Seo = new cSeo();
    /* Dekorasyon List */
    List<StartApp.Models.Products> DekorasyonList = pList.ListForCategoriy(5036);
    DekorasyonList = DekorasyonList.Where(x => x.Status == 1).Take(12).ToList();
    /* Dekorasyon List */

    /* Ev Gereçleri List */
    List<StartApp.Models.Products> EvGerecleriList = pList2.ListForCategoriy(51);
    EvGerecleriList = EvGerecleriList.Where(x => x.Status == 1).Take(12).ToList();
    /*  Ev Gereçleri List */
}

 <!--Dekorasyon List --> 
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading font-size-16">
                <a href="#" style="color:#000000;"><i class="fa fa-list"></i> BAMBU ÜRÜNLER </a>
            </div>
            <div class="panel-wrapper p-b-10 collapse in">
                <div id="owl-dekorasyon" class="owl-carousel owl-theme owl-tabs">
                    @foreach (var item in DekorasyonList)
                    {
                        decimal Amount = Convert.ToDecimal(item.CostPrice + (item.CostPrice * item.Percentage / 100));
                        <a href="/Reseller/Details?ID=@item.ID">
                            <div class="item">
                                <img src="~/Assets/Products/@item.MainImage" alt="~/Reseller/Details?ID=@item.Title">
                                <p style="color:#000000; font-weight:500; text-align:center">@item.Title </p>
                                <h4 align="center"><strong> @Amount.ToString("0.00")<i class="fa fa-try"></i> </strong> </h4>

                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
 <!--Dekorasyon List --> 

 <!--Ev Gereçleri List --> 
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading font-size-16">
                <a href="#" style="color:#000000;"><i class="fa fa-list"></i> KAHVE FİNCANLARI </a>
            </div>
            <div class="pandemo-2el-wrapper p-b-10 collapse in">
                <div id="owl-ev-gerecleri" class="owl-carousel owl-theme">
                    @foreach (var itemx in EvGerecleriList)
                    {
                        decimal Amount = Convert.ToDecimal(itemx.CostPrice + (itemx.CostPrice * itemx.Percentage / 100));

                        <a href="/Reseller/Details?ID=@itemx.ID">
                            <div class="item">
                                <img src="~/Assets/Products/@itemx.MainImage" alt="~/Reseller/Details?ID=@itemx.Title">
                                <p style="color:#000000; font-weight:500; text-align:center">@itemx.Title </p>
                                <h4 align="center"><strong> @Amount.ToString("0.00")<i class="fa fa-try"></i> </strong> </h4>

                            </div>

                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
 <!--Ev Gereçleri List --> 
