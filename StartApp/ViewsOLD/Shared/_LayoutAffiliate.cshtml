@model StartApp.Models.AffiliateView
@using StartApp.Business
@{
    //Login Control
    cLogin LoginStatus = new cLogin();
    cAffCustomer Customer = new cAffCustomer();
    LoginStatus.AffiliateValidate();
    if (!string.IsNullOrEmpty(LoginStatus.AffiliateDetails().AffiliateID.ToString()))
    {
        int UserID = Convert.ToInt32(LoginStatus.AffiliateDetails().AffiliateID);
        ViewBag.UserName = Customer.Details(UserID).Name + " " + Customer.Details(UserID).Surname;
    }


}

