@model StartApp.Models.HomeView
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="../Assets/reseller/plugins/images/favicon.png">
    <title>Satıcı Kayıt Formu</title>
    <!-- Bootstrap Core CSS -->
    <link href="../Assets/reseller/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="../Assets/reseller/plugins/bower_components/bootstrap-extension/css/bootstrap-extension.css" rel="stylesheet">
    <link href="~/Assets/reseller/startapp-scripts/startapp-style.css" rel="stylesheet" />
    <link href="~/Assets/reseller/css/colors/megna.css" id="theme" rel="stylesheet">
</head>

<body style="background-color:#01c0c8;">
    <!-- Preloader -->

    <div class="container">
        <div align="center">
            <div class="col-md-6" style="margin:75px 0px 40px 0px;">
                <img width="175" src="~/Assets/reseller/images/logo.png" />
            </div>
            <div class="col-md-6" style="margin:30px 0px 30px 0px;color:#fff; background-color:#fcab19; font-weight:600; border-radius:8px; border:3px solid #fff;padding:15px;" >
                <h2 >Sosyal medya hesaplarınızda ürünlerimizi satarak sizde kazanabilirsiniz.  </h2>
                <i class="icon-basic-eye-closed"></i>
             </div>
                <div class="col-md-6" style="background-color:#fff; border:7px solid #098c92; padding:10px; text-align:left;">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            <h1 style="text-align:center!important;"><i class="fa fa-user-circle"></i>SATICI BİLGİLERİNİZ</h1>
                            <p align="center">Başvurunuz Satış Ortaklığı Olarak Kaydedilecektir.</p>
                            <hr />
                        </div>
                        <h2 style="color:#098c92;">Genel Bilgiler</h2>
                        <p>*Onay için bu bilgiler zorunludur.</p>
                            <div class="form-group">
                                <label><b>Sanal Mağaza Adı</b></label>
                                @Html.TextBoxFor(x => x.AffCustomerDetails.CompanyTitle, new { @class = "form-control", required = "required" })
                            </div>
                                <div class="form-group">
                                    <div class="form-input-icon form-input-icon-right">
                                        <label><b>*Yetkili Ad</b></label>
                                        @Html.TextBoxFor(x => x.AffCustomerDetails.Name, new { @class = "form-control", required = "required" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-input-icon form-input-icon-right">
                                        <label><b>*Yetkili Soyad</b></label>
                                        @Html.TextBoxFor(x => x.AffCustomerDetails.Surname, new { @class = "form-control", required = "required" })
                                    </div>
                                </div>
                                    <div class="form-group">
                                        <div class="form-input-icon form-input-icon-right">
                                            <label><b>*Telefon</b></label>
                                            @Html.TextBoxFor(x => x.AffCustomerDetails.Phone, new { @class = "form-control", required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-input-icon form-input-icon-right">
                                            <label><b>*E-Mail</b></label>
                                            @Html.TextBoxFor(x => x.AffCustomerDetails.Email, new { @class = "form-control", required = "required" })
                                        </div>
                                    </div>
                                     <br />
                                    <h2 style="color:#098c92;" >Satış Yapılacak Platform</h2>
                                    <p>*En az bir sayfa ekleyiniz.</p>
                                    <div class="form-group">
                                        <div class="form-input-icon form-input-icon-right">
                                            <label><b>Instagram</b></label>
                                            @Html.TextBoxFor(x => x.AffCustomerDetails.Instagram, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-input-icon form-input-icon-right">
                                            <label><b>Facebook</b></label>
                                            @Html.TextBoxFor(x => x.AffCustomerDetails.Facebook, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-input-icon form-input-icon-right">
                                            <label><b>Twitter</b></label>
                                            @Html.TextBoxFor(x => x.AffCustomerDetails.Twitter, new { @class = "form-control"})
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-input-icon form-input-icon-right">
                                            <label><b>Web Site</b></label>
                                            @Html.TextBoxFor(x => x.AffCustomerDetails.Site, new { @class = "form-control"})
                                        </div>
                                    </div>
                                    <div class="form-actions">
                                        @Html.HiddenFor(x => x.AffCustomerDetails.Status, new { Value = "0" })
                                        @Html.HiddenFor(x => x.AffCustomerDetails.CustomerCode, new { Value = "0" })
                                        @Html.HiddenFor(x => x.AffCustomerDetails.Password, new { Value = "0" })
                                        <div align="center">
                                            <a href="/" class="pull-left btn btn-warning btn-lg">< Geri Dön</a>
                                            <button type="submit" class="btn btn-primary pull-right btn-lg"> <i class="fa fa-check"></i> Başvurumu Gönder ></button>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                    }
                </div>
            </div>
    </div>



    <!-- jQuery -->
    <script src="~/Assets/reseller/plugins/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Assets/reseller/bootstrap/dist/js/bootstrap.min.js"></script>

</body>

</html>
