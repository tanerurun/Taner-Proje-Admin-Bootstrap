@model StartApp.Models.AdminView
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="card">
    <div class="card-header">
        <a href="~/Admin/CategoryManage" class="pull-right btn btn-success"> <i class="fa fa-list"></i> Tüm Kategoriler</a>
        <a href="~/Admin/CategoryAdd" class="pull-right btn btn-primary"> <i class="fa fa-plus-circle"></i>  Yeni Kategori Ekle</a>
        <span class="cat__core__title">
            <strong><i class="icmn-stack"></i> Ürün Kategorisi Güncelle</strong>
        </span>
    </div>
    <div class="card-block">
        <div class="row">
            <div class="col-md-4 col-sm-12 col-xs-12">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <label>Kategori Adı <small>(Türkçe)</small></label>
                        @Html.TextBoxFor(x => x.CategoriyDetails.Name, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label>Kategori Adı <small>(İngilizce)</small></label>
                        @Html.TextBoxFor(x => x.CategoriyDetails.NameEng, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label>Ana Kategori</label>
                        @Html.DropDownListFor(x => x.CategoriyDetails.MainCategoryID, (List<SelectListItem>)ViewBag.CategoryList, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(x => x.CategoriyDetails.Status, new { @Value = "1" })
                        @Html.HiddenFor(x => x.CategoriyDetails.ID)
                        <input type="submit" class="btn btn-primary" value="Kaydet" />
                    </div>
                }
            </div>
            @if (ViewBag.Status != null)
            {
                <div class="row">
                    <div class="col-md-8 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <div class="alert alert-@ViewBag.Status" role="alert">@ViewBag.Result</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>