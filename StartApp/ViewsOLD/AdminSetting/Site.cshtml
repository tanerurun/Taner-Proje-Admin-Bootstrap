@model StartApp.Models.AdminView
@{
    ViewBag.Title = "Site Tercihleri";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="card">
    <div class="card-header">
        <span class="cat__core__title">
            <strong><i class="icmn-stack"></i> Ayarlar</strong>
        </span>
    </div>
    <div class="card-block">
        <div class="nav-tabs-horizontal">
            <ul class="nav nav-tabs mb-4" role="tablist">
                <li class="nav-item">
                    <a class="nav-link" href="/AdminSetting/Company" role="tab" aria-expanded="true">
                        <i class="fa fa-building-o"></i>
                        Firma Bilgileri
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="~/AdminSetting/Site" role="tab" aria-expanded="false">
                        <i class="fa fa-info-circle"></i> Site Tercihleri
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/AdminSetting/Users" role="tab" aria-expanded="false">
                        <i class="icmn-user"></i> Kullanıcılar
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="home2" role="tabcard" aria-expanded="true">
                    <div class="col-md-4 col-sm-12 col-xs-12">
                        @using (Html.BeginForm())
                        {
                            <div class="form-group">
                                <label>Alan Adı</label>
                                @Html.TextBoxFor(x => x.SiteInfo.Domain, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Site Başlık</label>
                                @Html.TextBoxFor(x => x.SiteInfo.Title, new { @class = "form-control", required = "required" })
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                @Html.TextAreaFor(x => x.SiteInfo.Desciption, new { @class = "form-control", @Rows = "3" })
                            </div>
                            <div class="form-group">
                                <label>Tanımlayıcı Kelimeler</label>
                                @Html.TextBoxFor(x => x.SiteInfo.Keywords, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Gönderici Mail</label>
                                @Html.TextBoxFor(x => x.SiteInfo.EMail, new { @class = "form-control", required = "required" })
                            </div>

                            <div class="form-group">
                                <label>Telif Hakkı</label>
                                @Html.TextBoxFor(x => x.SiteInfo.Copyright, new { @class = "form-control", required = "required" })
                            </div>

                            <div class="form-group">
                                @Html.HiddenFor(x => x.SiteInfo.ID)
                                @Html.HiddenFor(x => x.SiteInfo.Status)
                                @Html.HiddenFor(x => x.SiteInfo.Logo)
                                @Html.HiddenFor(x => x.SiteInfo.LogoMenu)
                                <input type="submit" class="btn btn-primary" value="Kaydet" />
                            </div>
                        }
                    </div>
                    @if (ViewBag.Status != null)
                    {
                        <div class="row">
                            <div class="col-md-4 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="alert alert-@ViewBag.Status" role="alert">@ViewBag.Result</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>