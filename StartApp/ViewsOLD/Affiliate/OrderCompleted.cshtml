
@{
    ViewBag.Title = "OrderCompleted";
    Layout = "~/Views/Shared/_LayoutAffiliate.cshtml";
    int ResultStatus = ViewBag.Result;
}

<div id="page-wrapper" style="min-height: 577px;">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Ürün Bilgileri</h4>
            </div>
            <div class="col-md-9">
                <ol class="breadcrumb" style="font-weight:500;">
                    <li> <i class="fa fa-home"></i> <a href="~/">Panel</a></li>
                    <li> <a href="~/Affiliate/Products">Ürünler</a></li>
                    <li class="active">Sipariş Durumu</li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                @if (ResultStatus == 1)
                {
                   <div class="white-box">
                    <h4 style="color:#1e9433; font-weight:500"><i class="fa fa-check"></i> Siparişiniz Başarıyla Oluşturuldu. </h4>
                    <p class="Bold">Siparişinizin durumunu <b><a style="color:#000" href="~/Affiliate/Orders">Siparişlerim</a></b> sayfasından takip edebilirsiniz.</p>
                   </div>
                }
                else
                {
                    <div class="white-box">
                        İşlem Başarısız!
                    </div>
                }
                </div>
            </div>
        </div>
    </div>

