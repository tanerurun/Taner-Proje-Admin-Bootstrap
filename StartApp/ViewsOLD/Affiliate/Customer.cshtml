@model StartApp.Models.AffiliateView
@{
    ViewBag.Title = "Satıcı Bilgileri - toptanara.com";
    Layout = "~/Views/Shared/_LayoutAffiliate.cshtml";
}
@using (Html.BeginForm())
{
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row bg-title">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title">Satıcı Bilgileri</h4>
                </div>
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                    <ol class="breadcrumb">
                        <li><a href="~/Reseller">Panel</a></li>
                        <li class="active">Firma Bilgileri</li>
                    </ol>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- .row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="white-box">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs " role="tablist">
                            <li role="presentation" class="nav-item"><a href="~/Affiliate/Customer" class="nav-link active" aria-controls="profile" aria-expanded="false"><span><i class="ti-user"></i></span> Müşteri Bilgileri </a></li>
                            <li role="presentation" class="nav-item"><a href="~/Affiliate/SupportList" class="nav-link" aria-controls="messages" aria-expanded="false"><span><i class="ti-email"></i></span> Destek Talebi</a></li>
                        </ul>
                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="iprofile" aria-expanded="false">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <h4>Satıcı Kodunuz: <strong> @Html.DisplayTextFor(x => x.CustomerDetails.CustomerCode) </strong></h4>
                                    </div>
                                    <div class="form-group">
                                        <label><b>Firma Adı</b></label>
                                        @Html.TextBoxFor(x => x.CustomerDetails.CompanyTitle, new { @class = "form-control", @required = "required" })
                                    </div>
                                    <div class="form-group">
                                        <label><b>Yetkili Adı</b></label>
                                        @Html.TextBoxFor(x => x.CustomerDetails.Name, new { @class = "form-control", @required = "required" })
                                    </div>
                                    <div class="form-group">
                                        <label><b>Yetkili Soyadı</b></label>
                                        @Html.TextBoxFor(x => x.CustomerDetails.Surname, new { @class = "form-control", @required = "required" })
                                    </div>
                                    <div class="form-group">
                                        <label><b>E-Posta</b></label>
                                        @Html.TextBoxFor(x => x.CustomerDetails.Email, new { @class = "form-control", @required = "required" })
                                    </div>
                                    <div class="form-group">
                                        <label><b>Telefon</b></label>
                                        @Html.TextBoxFor(x => x.CustomerDetails.Phone, new { @class = "form-control", @required = "required" })
                                    </div>
                                    <div class="form-group">
                                        <label><b>Parola</b></label>
                                        @Html.TextBoxFor(x => x.CustomerDetails.Password, new { @class = "form-control", @required = "required" })
                                    </div>
                                    <div class="form-group">
                                        @Html.HiddenFor(x => x.CustomerDetails.ID)
                                        @Html.HiddenFor(x => x.CustomerDetails.CustomerCode)
                                        @Html.HiddenFor(x => x.CustomerDetails.Status)
                                        <button type="submit" class="btn btn-default">Güncelle</button>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-group">
                                            <div class="alert alert-@ViewBag.Status" role="alert">@ViewBag.Result</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- .row -->
        </div>
        <!-- /.container-fluid -->
        @Html.Partial("~/Views/Shared/Reseller/_Partial_Footer.cshtml")
    </div>
}

