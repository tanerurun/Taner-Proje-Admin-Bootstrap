@model StartApp.Models.AdminView
@{
    ViewBag.Title = "Müşteri Yönetimi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    List<SelectListItem> CustomerControl = new List<SelectListItem>();
    CustomerControl.Add(new SelectListItem { Text = "Aktif", Value = "1" });
    CustomerControl.Add(new SelectListItem { Text = "Pasif", Value = "0" });
}

<section class="card">
    <div class="card-header">
        <a href="~/AdminCustomer/Manager" class="pull-right btn btn-success"> <i class="fa fa-list"></i> Tüm Müşteriler</a>
        <a href="~/AdminCustomer/Add" class="pull-right btn btn-primary"> <i class="fa fa-plus-circle"></i>  Yeni Müşteri Ekle</a>
        <span class="cat__core__title">
            <strong><i class="icmn-stack"></i> Müşteri Düzenle</strong>
        </span>
    </div>
    <div class="card-block">
        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-md-5 col-sm-12 xs-col-12">
                    <div class="form-group">
                        <label><b>Firma Ünvanı</b></label>
                        @Html.TextBoxFor(x => x.AffCustomerDetails.CompanyTitle, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <div class="form-input-icon form-input-icon-right">
                            <label><b>Yetkili Ad</b></label>
                            @Html.TextBoxFor(x => x.AffCustomerDetails.Name, new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-input-icon form-input-icon-right">
                            <label><b>Yetkili Soyad</b></label>
                            @Html.TextBoxFor(x => x.AffCustomerDetails.Surname, new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-input-icon form-input-icon-right">
                            <label><b>Telefon</b></label>
                            @Html.TextBoxFor(x => x.AffCustomerDetails.Phone, new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-input-icon form-input-icon-right">
                            <label><b>E-Mail</b></label>
                            @Html.TextBoxFor(x => x.AffCustomerDetails.Email, new { @class = "form-control", required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-input-icon form-input-icon-right">
                            <label><b>Ülke</b></label>
                            @Html.TextBoxFor(x => x.AffCustomerDetails.Country, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label><b>Şehir</b></label>
                        @Html.TextBoxFor(x => x.AffCustomerDetails.City, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <div class="form-input-icon form-input-icon-right">
                            <label><b>Adres</b></label>
                            @Html.TextAreaFor(x => x.AffCustomerDetails.Address, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-input-icon form-input-icon-right">
                            <label><b>Instagram</b></label>
                            @Html.TextAreaFor(x => x.AffCustomerDetails.Instagram, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-input-icon form-input-icon-right">
                            <label><b>Facebook</b></label>
                            @Html.TextAreaFor(x => x.AffCustomerDetails.Facebook, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-input-icon form-input-icon-right">
                            <label><b>Twitter</b></label>
                            @Html.TextAreaFor(x => x.AffCustomerDetails.Twitter, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-input-icon form-input-icon-right">
                            <label><b>Site</b></label>
                            @Html.TextAreaFor(x => x.AffCustomerDetails.Site, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-input-icon form-input-icon-right">
                            <label><b>Satıcı Durumu</b></label>
                            @Html.DropDownListFor(x => x.AffCustomerDetails.Status, (List<SelectListItem>)CustomerControl, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-input-icon form-input-icon-right">
                            <label><b>Bayi Kodu</b></label>
                            @Html.TextBoxFor(x => x.AffCustomerDetails.CustomerCode, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-input-icon form-input-icon-right">
                            <label><b>Bayi Parola</b></label>
                            @Html.TextBoxFor(x => x.AffCustomerDetails.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"> KAYDET </button>
                        <a href="~/AdminAffiliateCustomer/Update?ID=@Model.AffCustomerDetails.ID&MailSend=4701" class="btn btn-warning">Onay Gönder</a>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <div class="alert alert-@ViewBag.Status" role="alert">@ViewBag.Result</div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
